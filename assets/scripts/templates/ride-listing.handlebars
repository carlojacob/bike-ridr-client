{{#each rides as |ride|}}

  <div class="col-2 col-sm-2 col-lg-2 ride-data">
      {{ride.date}}
  </div>
  <div class="col-3 col-sm-3 col-lg-3 ride-data">
      {{limit ride.location 20}}
  </div>
  <div class="col-2 col-sm-2 col-lg-2 ride-data">
      {{ride.ride_distance}} miles
  </div>
  <div class="col-2 col-sm-2 col-lg-2 ride-data">
      {{ride.HH}}:{{ride.MM}}:{{ride.SS}}
  </div>
  <div data-id="{{ride.id}}" class="col-3 col-sm-3 col-lg-3">
    <button class="delete-edit-btn">Edit</button>
    <button class="delete-edit-btn">Delete</button>
  </div>

{{/each}}
